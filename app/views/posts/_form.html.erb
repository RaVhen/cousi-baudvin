<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" style="width:750px;">
    <%= f.label :title, :for => "inputDefault",:class => "control-label" %><br>
    <%= f.text_field :title, :class => "form-control", :id => "inputDefault", :type => "text" %>
  </div>
  <div class="form-group" style="width:750px;">
    <%= f.label :body, :for => "inputLarge",:class => "control-label" %><br>
    <%= f.text_area :body, :class => "form-control input-lg", :id => "inputLarge", :type => "text" %>
  </div>
  <div class="actions">
    <%= f.submit 'Upload!',:class => "btn btn-default" %>
  </div>
<% end %>
